@{
    ViewData["Title"] = "Confirmation Email Sent";
}

<div class="row justify-content-around">
    <div class="card" style="margin:5px 15px 10px 15px;">
        <div class="card-body">
            <h5 class="card-title" style="color: green;">@ViewData["Title"]</h5>
            <p class="card-text">A confirmation email has been sent. Please check your email and verify your account.</p>
        </div>
        <div class="row justify-content-around">
            <div style="margin:15px 0 10px 0;">
                <a class="btn btn-sm btn-myBlueDarker" asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
    </div>
</div>

