@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-10">
        <p>Your account contains personal data that you have given us. This page allows you to delete your account and any data you provided.</p>
        <p class="text-center" style="margin:10px 0;">
            <strong style="color:red;">Your account and data will be permanently removed - this cannot be recovered.</strong>
        </p>
        <div class="text-center">
            @*<form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                <button class="btn btn-myBlueDark" type="submit">Download</button>
            </form>*@
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-sm btn-myRed">Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}